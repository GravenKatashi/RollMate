# Build stage
FROM node:20-alpine AS build

WORKDIR /app

# Accept API_URL as build argument
ARG API_URL=http://localhost:8000/api

# Copy package files
COPY package*.json ./

# Install dependencies
RUN npm ci

# Copy source files
COPY . .

# Set API URL environment variable for build
ENV API_URL=${API_URL}

# Build Angular app for production
# The API URL will be determined at runtime from window.location
RUN npm run build

# Production stage
FROM nginx:alpine

# Copy built files from build stage
COPY --from=build /app/dist/front-end/browser /usr/share/nginx/html

# Copy nginx configuration
COPY docker/nginx.conf /etc/nginx/conf.d/default.conf

# Expose port
EXPOSE 80

# Start nginx
CMD ["nginx", "-g", "daemon off;"]

